<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_survey_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which age ranges apply to your children?"
        android:textSize="18sp"
        android:paddingBottom="16dp" />

    <RadioGroup
        android:id="@+id/rg_age_ranges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_no_children"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No children" />

        <RadioButton
            android:id="@+id/rb_age_0_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age 0-2" />

        <RadioButton
            android:id="@+id/rb_age_3_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age 3-5" />

        <RadioButton
            android:id="@+id/rb_age_6_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age 6-10" />

        <RadioButton
            android:id="@+id/rb_age_11_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age 11-15" />

        <RadioButton
            android:id="@+id/rb_age_16_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age 16-21" />

        <RadioButton
            android:id="@+id/rb_age_21_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age 21+" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_submit_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp" />
</LinearLayout>
