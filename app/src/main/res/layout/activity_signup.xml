<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Email EditText -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="8dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Email input field" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="8dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Password input field" />

    <!-- Terms and Conditions CheckBox -->
    <CheckBox
        android:id="@+id/cb_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the Terms and Conditions"
        android:layout_marginBottom="8dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Agree to terms checkbox" />

    <!-- Terms and Conditions TextView -->
    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Terms and Conditions"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:contentDescription="Terms and Conditions link" />

    <!-- Signup Button -->
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="@color/purple_500"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Sign up button" />

    <!-- ProgressBar for loading state -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>
